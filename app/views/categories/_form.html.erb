    </div>
    <div class="form-group mb-4">
        <%= f.label :category_type, "Tipo", class: "block text-gray-700 font-bold mb-2 dark:text-gray-200" %>
        <%= f.select :category_type, [%w[Carta menu], %w[MenÃº daily]], {}, class: "form-select mt-1 block rounded-[3px] border-gray-300 shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50 w-full dark:text-gray-800" %>
    </div>
    <div class="flex items-center justify-between">
        <%= f.submit "Gardar", class: "w-full bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-[3px] focus:outline-none focus:shadow-outline-blue focus:ring ring-blue-300 focus:border-blue-300 active:bg-blue-800" %>
