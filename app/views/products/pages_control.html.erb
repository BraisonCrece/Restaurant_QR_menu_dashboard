<div class="w-full max-w-[400px]">
  <h1 class="font-thin text-4xl text-center">Configuracións</h1>
  <%= form_with(model: @settings, data: { turbo: false }, class: "shadow rounded-[3px] px-8 pt-6 pb-8 my-4 dark:shadow-white") do |f| %>
    <% if @settings.errors.any? %>
      <div id="error_explanation" class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded-[3px] mb-4">
        <h2 class='font-bold mb-2'><%= pluralize(@settings.errors.count, "error") %> prohibited this category from being saved:</h2>
        <ul class="list-disc ml-5">
          <% @settings.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <div class="form-group mb-4">
      <%= f.label :root_page, "Páxina por defecto", class: "dark:text-gray-200 block text-gray-700 font-bold mb-2" %>
      <%= f.select :root_page, [["Carta", "carta"], ["Menú", "menu"]],{}, class: "dark:text-gray-800 form-select mt-1 block rounded-[3px]-md border-gray-300 shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50 w-full" %>
    </div>
    <div class="form-group mb-4">
      <%= f.label :show_toggler, "Amosar botón de selección de menú", class: "dark:text-gray-200 block text-gray-700 font-bold mb-2" %>
      <%= f.select :show_toggler, [["Amosar", true], ["Ocultar", false]],{}, class: "dark:text-gray-800 form-select mt-1 block rounded-[3px]-md border-gray-300 shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50 w-full" %>
    </div>
    <hr>
    <div class="form-group mb-4">
      <%= f.label :locale_toggler, "Amosar botón de selección de idioma", class: "dark:text-gray-200 block text-gray-700 font-bold mb-2" %>
      <%= f.select :locale_toggler, [["Amosar", true], ["Ocultar", false]],{}, class: "dark:text-gray-800 form-select mt-1 block rounded-[3px]-md border-gray-300 shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50 w-full" %>
    </div>
    <hr>
    <div class="form-group mb-4 mt-2">
      <%= f.label :menu_price, "Prezo do menú", class: "dark:text-gray-200 block text-gray-700 font-bold mb-2" %>
      <%= f.number_field :menu_price, step: :any, class: "dark:text-gray-800 form-input mt-1 block w-full rounded-[3px]-md border-gray-300 shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50" %>
    </div>
    <hr>
    <div class="form-group mb-4 mt-2">
      <%= f.label :phone_number, "Teléfono", class: "dark:text-gray-200 block text-gray-700 font-bold mb-2" %>
      <%= f.text_field :phone_number, class: "dark:text-gray-800 form-input mt-1 block w-full rounded-[3px]-md border-gray-300 shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50" %>
    </div>
    <div class="form-group mb-4 mt-2">
      <%= f.label :mobile, "Móbil", class: "dark:text-gray-200 block text-gray-700 font-bold mb-2" %>
      <%= f.text_field :mobile, class: "dark:text-gray-800 form-input mt-1 block w-full rounded-[3px]-md border-gray-300 shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50" %>
    </div>

    <div class="flex items-center justify-between">
      <%= f.submit "Gardar", class: "w-full bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-[3px] focus:outline-none focus:shadow-outline-blue focus:ring ring-blue-300 focus:border-blue-300 active:bg-blue-800" %>
    </div>
  <% end %>
  <%= link_to "Atrás", root_path, class: 'underline underline-blue-800 text-blue-600' %>
</div>
