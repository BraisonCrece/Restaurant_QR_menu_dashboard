<div class='flex justify-between py-3 print:my-6 px-4 border-t border-neutral-100 animate__animated animate__fadeIn animate__slower'>
  <div class="title price flex flex-col gap-2 max-w-[72.5%]">
    <p class='text-2xl  playfare font-light balance'> <%= translate("product.#{product.id}.title", product.title) %></p>
    <% unless product.allergens.empty? %>
        <section class="flex flex-row w-full gap-1 h-5 print:hidden">
            <% product.allergens.each do |allergen| %>
                <%= image_tag allergen.icon.variant(:thumb), data: { modal_target: "image" }, class: "w-4 h-4 aspect-square" %>
            <% end %>
        </section>
    <% end %>
  </div>
  <div class="text-2xl self-center font-extralight">
    <%= number_with_precision(product.prize, precision: 2, separator: ",") %><small class='text-black text-lg font-extralight'>â‚¬</small>
  </div>
</div>

