<div class='flex justify-between py-6 px-4 gap-2 print:my-6 border-t dark:border-gray-100/25 border-gray-100 animate__animated animate__fadeIn animate__slower'>
  <div class="title price flex flex-col max-w-[72.5%]">
    <p class='text-2xl  playfare font-light balance'> <%= translate("product.#{product.id}.title", product.title) %></p>
  </div>
  <div class="text-2xl self-center font-extralight flex gap-1">
    <%= number_with_precision(product.prize, precision: 2, separator: ",") %>
    <small class='text-black font-extralight italic place-self-end text-sm dark:text-white duration-500'>
      <% if product.per_kilo %>
        €/Kg
      <% elsif product.per_gram %>
        €/100gr
      <% elsif product.per_unit %>
        €/ud
      <% else %>
        €
      <% end %>
    </small>
  </div>
</div>
