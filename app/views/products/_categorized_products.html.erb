<% @categories.each do |category| %>
  <% products = @categorized_products[category.id] %>
  <% next if products.blank? %>
  <h2 class="text-3xl font-semibold text-teal-700 mb-2 px-4 text-center" id="category-<%= category.id %>">
    <%= translate("category.#{category.id}.name",category.name) %>
  </h2>
  <% products.each do |product| %>
    <%= turbo_stream_from product %>

    <%= link_to build_link(product), data: { turbo_frame: "modal" } do %>
        <%= render "product", product: product %>
    <% end %>
  <% end %>
  <div class='py-3'></div>
<% end %>
