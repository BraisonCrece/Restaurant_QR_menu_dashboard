<% if flash[:notice] %>
  <div data-controller="notifications" data-notifications-target="x" data-action="click->notifications#close" class="bg-green-100 border border-green-400 text-green-700 p-6 rounded fixed top-2 z-[70] w-[95%] max-w-xl animate__animated animate__fadeInRight animate__faster" role="alert">
    <strong class="font-bold">Exito!</strong>
    <span class="block sm:inline"><%= notice %></span>
    <span class="absolute top-0 bottom-0 right-0 px-4 py-3">
      <svg class="fill-current h-8 w-8 text-green-500" role="button" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20"><title>Close</title><path d="M14.348 14.849a1.2 1.2 0 0 1-1.697 0L10 11.819l-2.651 3.029a1.2 1.2 0 1 1-1.697-1.697l2.758-3.15-2.759-3.152a1.2 1.2 0 1 1 1.697-1.697L10 8.183l2.651-3.031a1.2 1.2 0 1 1 1.697 1.697l-2.758 3.152 2.758 3.15a1.2 1.2 0 0 1 0 1.698z"/></svg>
    </span>
  </div>
<% end %>
